  "title": "Group Schema",
  "description": "Schema for group/organization data",
  "$ref": "#/definitions/Group",
  "definitions": {
    "Group": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "urlname": {
          "type": "string"
        },
        "link": {
          "type": "string",
          "format": "uri"
        },
        "memberCount": {
          "type": "integer",
          "minimum": 0
        },
        "photo": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "baseUrl": {
              "type": "string",
              "format": "uri"
            },
            "directUrl": {
              "type": "string",
              "format": "uri"
            }
          },
          "required": [
            "id"
          ],
          "additionalProperties": false
        },
        "extras": {
          "type": "object",
          "additionalProperties": {}
        }
      },
      "required": [
        "id",
        "name",
        "urlname",
        "link",
        "memberCount"
      ],
      "additionalProperties": false
    }
  }
}